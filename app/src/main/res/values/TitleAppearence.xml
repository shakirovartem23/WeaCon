<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Text">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Gray">
        <item name="android:textColor">@color/material_dynamic_neutral40</item>
    </style>

    <style name="Text.Gray.FeelsLike">
        <item name="android:textSize">36dp</item>
        <item name="layout_constraintBottom_toBottomOf">@id/textC</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toStartOf">@id/textC</item>
    </style>

    <style name="Text.Temperature">
        <item name="android:textSize">150dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="Text.Gray.TempAdd">
        <item name="android:textSize">20dp</item>
        <item name="layout_constraintTop_toTopOf">@id/textC</item>
        <item name="layout_constraintStart_toEndOf">@id/textC</item>
    </style>

    <style name="Text.Gray.Date">
        <item name="android:textSize">30dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="Text.Title">
        <item name="android:fontFamily">@font/alfa_slab_one</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="Text.Title.Text_Collapse">
        <item name="android:textSize">22dp</item>
    </style>

    <style name="Text.Mini">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/material_dynamic_primary10</item>

    </style>

    <style name="Text.Mini.Value">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">20dp</item>
    </style>

</resources>